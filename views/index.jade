html 
    head 
        title=title 
        link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj' crossorigin='anonymous')
        script(src='/js/scripts.js' defer='')
        link(rel='stylesheet', href='/css/styles.css')

   
    body(style='background-color: #F2F2F2')
        .container
            h1.text-center= message
            .teste(style='border: 1px solid #cfe0ed; padding: 20px;border-radius: 5px; background-color: #fff; box-shadow: inset 0 3px 0 #0D6EFD')
                form.row.g-3
                    .col-md-1
                        label.form-label(for='loja') Loja
                        input#loja.form-control.form-control-sm(type='text')
                    .col-md-6
                        label.form-label(for='inputZip') &nbsp;
                        input#lojaNome.form-control.form-control-sm(type='text' disabled)
                    .col-md-5
                        label.form-label(for='placa') Placa
                        input#placa.form-control.form-control-sm(type='text')
                    .col-md-12
                        .card
                            b.card-header.bg-primary.text-white Registros                 
                                button#addRegistros.btn.btn-primary.btn-sm(type='button' data-bs-toggle='modal' data-bs-target='#chaveNFeModal' style='float: right') Adicionar
                            .card-body
                                table#tableRegistros.table.table-bordered
                                    thead
                                        tr
                                            th(scope='col') #
                                            th(scope='col') NÂº NFe
                                            th(scope='col') Chave NFe
                                    tbody
    
                    .d-grid.gap-2
                        button#btn-gravar.btn.btn-primary(type='button') Gravar portaria
                
        

        #spinner(hidden='')


#chaveNFeModal.modal(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true' data-bs-backdrop="static")
    .modal-dialog
        .modal-content
            .modal-header
                h5#exampleModalLabel.modal-title Nota fiscal
                button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
            .modal-body
                form.row.g-3.needs-validation(novalidate='')
                    .col-md-12
                        label.form-label(for='chaveNFe') Chave NF-e
                        input#chaveNFe.form-control.form-control-sm(type='text' aria-describedby='chaveNFe' required='')
                        #validate(style='color: red; font-size: .8em') 
            .modal-footer
                button#addNFe.btn.btn-primary(type='button') Adicionar

